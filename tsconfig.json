{
    "compilerOptions": {
      "experimentalDecorators": true,
      "sourceMap": true,
      "module": "esnext",
      "target": "es6",
      "jsx": "react",
      "allowJs": true,
      "importHelpers": true,
      "strict": true,
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true,
      "baseUrl": ".",
      "paths": {
        "app_modules/*": [
          "src/*"
        ]
      }
    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules",
      "build",
      "scripts",
      "acceptance-tests",
      "webpack",
      "jest",
      "src/setupTests.ts"
    ]
  }